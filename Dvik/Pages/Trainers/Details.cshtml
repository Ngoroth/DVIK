@page "{trainerId:int}"
@model Dvik.Pages.Trainers.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h2>@this.Model.Trainer.Name</h2>

<div>
    <h4>Trainer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Trainer.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Trainer.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Trainer.Bio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Trainer.Bio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Trainer.Photo)
        </dt>
        @if (this.Model.Trainer.Photo != null)
        {
            <dd class="col-sm-10">
                <img src="data:image/jpeg;base64,@(Convert.ToBase64String(this.Model.Trainer.Photo.Data))" class="img-fluid" alt="Адаптивные изображения">
            </dd>
        }
    </dl>
</div>

@if (this.Model.Message != null)
{
    <div class="alert alert-info">@this.Model.Message</div>
}

<div>
    <a asp-page="./List" class="btn btn-secondary">Все тренеры</a>
</div>
