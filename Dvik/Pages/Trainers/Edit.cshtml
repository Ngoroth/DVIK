@page "{trainerId:int?}"
@model Dvik.Pages.Trainers.EditModel

@{
    ViewData["Title"] = "Edit";
}

    <form method="post" enctype="multipart/form-data">

        <input type="hidden" asp-for="Trainer.Id" />
        <div class="form-group">
            <label asp-for="Trainer.Name"></label>
            <input asp-for="Trainer.Name" class="form-control" />
            <span class="text-danger" asp-validation-for="Trainer.Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="Trainer.Bio"></label>
            <textarea asp-for="Trainer.Bio" class="form-control"></textarea>
            <span class="text-danger" asp-validation-for="Trainer.Bio"></span>
        </div>
        <div class="form-group">
            <label asp-for="Photo">Фото тренера</label>
            <input asp-for="Photo" type="file" class="form-control-file">
        </div>
        <button type="submit" class="btn btn-primary">Сохранить</button>
    </form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
