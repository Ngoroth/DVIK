@page "{courseId:int?}"
@model Dvik.Pages.Courses.EditModel
@{
    ViewData["Title"] = "Edit";
}

<form method="post">

    <input type="hidden" asp-for="Course.Id" />
    <div class="form-group">
        <label asp-for="Course.Name"></label>
        <input asp-for="Course.Name" class="form-control" />
        <span class="text-danger" asp-validation-for="Course.Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Course.Description"></label>
        <textarea asp-for="Course.Description" class="form-control"></textarea>
        <span class="text-danger" asp-validation-for="Course.Description"></span>
    </div>
    <div class="form-group">
        <label asp-for="Course.Price"></label>
        <input type="number" asp-for="Course.Price" class="form-control" />
    </div>
    <div class="form-group">
        <select asp-for="SelectedTrainerIdString" class="form-control"
                asp-items="Model.TrainersNames"></select>
    </div>
    <button type="submit" class="btn btn-primary">Сохранить</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
