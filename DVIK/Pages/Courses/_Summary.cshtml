@using Dvik.Core;
@model Course

<div class="card">
    <div class="card-header">
        <h3>@this.Model.Name</h3>
    </div>
    <div class="card-body">
        <p class="card-text">@this.Model.Description</p>
    </div>
    <div class="card-footer">
        <a class="btn btn-lg" asp-page="./Detail" asp-route-courseId="@this.Model.Id">
            <i class="fas fa-search-plus"></i>
        </a>
        <a class="btn btn-lg" asp-page="./Edit" asp-route-courseId="@this.Model.Id">
            <i class="fas fa-edit"></i>
        </a>
        <a class="btn btn-lg" asp-page="./Delete" asp-route-courseId="@this.Model.Id">
            <i class="fas fa-trash"></i>
        </a>
    </div>
</div>